<div>
  <h3>{{title}}</h3>
  <p>{{description}}</p>
  <form class="form-horizontal">
    {{#params}}
      <div class="form-group">
        <label for="input-{{name}}" class="col-lg-2 control-label">{{name}}</label>
        <div class="col-lg-10">
          <input type="text" class="form-control" id="input-{{name}}" name="{{name}}" placeholder="{{info}}">
        </div>
      </div>
    {{/params}}
  </form>
  <button id="runDemo" class="btn btn-primary">Run demo</button>
  <div id="demoResults" class="hidden">
    <h4>Results:</h4>
    <span id="demoError" class="hidden">Error!</span>
    <pre id="demoOutput"></pre>
  </div>
</div>
